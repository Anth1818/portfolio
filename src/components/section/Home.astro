---
import Navigation from "../Navigation.astro";
import AnchorWithIconAndLabel from "../AnchorWithIconAndLabel.astro";
import hero from "src/assets/hero-image.jpg"
import MobileTop from "../MobileTop.astro";
import CV_ES from "src/assets/anthony_ruiz_CV_español.pdf"
import CV_EN from "src/assets/anthony_ruiz_english_CV.pdf"

const {lang} = Astro.props

const content = {
  es: {
    greeting: "Hola, soy",
    name: "Anthony Ruiz",
    title: "Y soy un <span class='text-tertiary-200'>Desarrollador  Web Frontend</span>",
    descriptionLg: "Soy un apasionado Desarrollador Frontend con un fuerte enfoque en crear aplicaciones web atractivas y fáciles de usar. Siempre estoy dispuesto a aprender y crecer en el campo del desarrollo web.",
    descriptionSm: "Soy un apasionado Desarrollador Frontend enfocado en crear aplicaciones web atractivas y fáciles de usar."
  },
  en: {
    greeting: "Hi, It's me",
    name: "Anthony Ruiz",
    title: "And I'm a <span class='text-tertiary-200'>Frontend web developer</span>",
    descriptionLg: "I am a passionate Frontend Developer with a strong focus on creating user-friendly and visually appealing web applications. I am always eager to learn and grow in the field of web development.",
    descriptionSm: "I am a passionate Frontend Developer with a strong focus on creating user-friendly and visually appealing web applications."
  }
}

---

<!-- ---Home -->
<section id="home" >
  <!-- ----nav -->
   {lang === "es" ? <Navigation lang={lang}/> : <Navigation />}


  <!-- nav mobile -->
  <!-- <div class="absolute z-10">
   <MobileNavigation client:load />
  </div> -->

  <!-- mobile logo and btn language -->
   <MobileTop lang={lang} />

  <!-- ----hero -->
  <section>
    <div>
      <img
        src={hero.src}
        alt="hero image"
        class="w-full h-screen object-cover object-center"
        loading="lazy"
      />
    </div>
    <!-- ----layer blue -->
    <div
      class="absolute top-0 left-0 w-full h-full bg-section-secondary opacity-80"
    >
    </div>

    <!-- information -->
    <article class="absolute top-20 lg:top-35 lg:left-10 w-full lg:w-1/2">
      <div class="flex flex-col justify-center gap-5 lg:ml-10 m-4">
        <h1 class="text-3xl text-white font-bold">
          <span class="text-tertiary-200">{lang === "es" ? content.es.greeting : content.en.greeting}</span>
          <br />
          <span class="font-mono text-3xl inline-block">{lang === "es" ? content.es.name : content.en.name}</span>
        </h1>
        <h2 class="text-4xl text-white font-semibold">
          <span set:html={lang === "es" ? content.es.title : content.en.title}></span>
        </h2>
        <p class="text-white text-lg font-semibold hidden lg:block">
          {lang === "es" ? content.es.descriptionLg : content.en.descriptionLg}
        </p>
        <p class="text-white text-lg font-semibold lg:hidden">
          {lang === "es" ? content.es.descriptionSm : content.en.descriptionSm}
        </p>
        <!-- social media icons -->

        <div
          class="flex gap-10 justify-center lg:gap-5 lg:w-full lg:justify-start"
        >
          <AnchorWithIconAndLabel
            href="https://www.linkedin.com/in/anthonyruiz1818/"
            iconName="Linkedin"
            label="Linkedin"
          />
          <AnchorWithIconAndLabel
            href="https://github.com/Anth1818"
            iconName="Github"
            label="Github"
          />
          <AnchorWithIconAndLabel
            href="https://discord.com/channels/@me"
            iconName="Discord"
            label="Discord"
          />
        </div>
      </div>
      <div class="flex lg:w-full justify-center lg:justify-start mt-10 lg:mt-2">
        <a
        href={lang === 'es' ? CV_ES : CV_EN}
        download
          class="w-[250px] p-2 m-8 rounded-3xl bg-tertiary-400 text-white font-semibold text-center block text-lg hover:bg-tertiary-200 transition duration-300 ease-in-out"
        >
          {lang === "es" ? "Descargar CV" : "Download CV"}
        </a>
      </div>
    </article>
  </section>
</section>

<style>
  .font-logo {
    font-family: "fa-brands-400", cursive;
    font-size: 3rem;
  }
</style>
