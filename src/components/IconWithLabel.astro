---
import { Icon } from "astro-icon/components";

const { iconName, label } = Astro.props;
---

<div class="relative group">
  <Icon name={iconName} class={"text-4xl hover:text-tertiary-200 transition duration-300"} />
  <span
    class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 text-white text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 font-bold"
  >
    {label}
  </span>
</div>
