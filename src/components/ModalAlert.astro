---
// filepath: c:\Users\tonyj\portfolio\src\components\ModalAlert.astro
const { message = "Error sending, please try again " } = Astro.props;
---

  <div class="modal-backdrop">
    <div class="modal">
      <h2>Error</h2>
      <p>{message}</p>
      <button>Cerrar</button>
    </div>
  </div>

<script>
  const closeModal = () => {
  document.querySelector(".modal-backdrop")?.remove();
  };

  const button = document.querySelector("button");
  button?.addEventListener("click", closeModal);

</script>

<style>
.modal-backdrop {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal {
  background: #fff;
  padding: 2rem;
  color: #333;
  border-radius: 8px;
  min-width: 300px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.2);
  text-align: center;
}
button {
  margin-top: 1rem;
  padding: 0.5rem 1.5rem;
  background: #e53e3e;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
button:hover {
  background: #c53030;
}
</style>